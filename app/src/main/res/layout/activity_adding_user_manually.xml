<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10">
    <!-- youes add the activity context here -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/imageView"
        android:src="@drawable/user"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textStyle="bold"
            android:text="Name"
            android:gravity="center_vertical"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textStyle="bold"
            android:text="Profession"
            android:gravity="center_vertical"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:inputType="date"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textStyle="bold"
            android:text="Phone number"
            android:gravity="center_vertical"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textStyle="bold"
            android:text="Loaction"
            android:gravity="center_vertical"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:textColor="@color/white"
            android:text="Add from map"
            android:background="@drawable/orange_btn_background"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="@string/done"
        android:textColor="#ffffff"
        android:id="@+id/reg_button"
        android:padding="10dp"
        android:background="@drawable/green_btn_background"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:onClick="onClickDoneNewUserManually" />
</LinearLayout>
